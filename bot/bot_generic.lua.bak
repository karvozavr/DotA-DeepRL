-- Bot generic

local flag = true

function Think()

	local bot = GetBot()

	if bot:GetLocation()[1] < -1000.0 or bot:GetLocation()[1] > 500.0  then
		flag = true
	end

	if flag then
		bot:Action_MoveToLocation(Vector(0.0, 0.0, 300.0))
		flag = false
	end

	if bot:WasRecentlyDamagedByAnyHero(25.0) then 
		local target = bot:GetNearbyHeroes(1500.0, true, BOT_MODE_NONE)[1]
		bot:Action_AttackUnit(target, false)
	end

	if bot:WasRecentlyDamagedByCreep(5.0) then 
		local target = bot:GetNearbyCreeps(500.0, true)[1]
		bot:Action_AttackUnit(target, false)
	end

	if bot:WasRecentlyDamagedByTower(5.0) then 
		local target = bot:GetNearbyTowers(1000.0, true)[1]
		bot:Action_AttackUnit(target, false)
	end
	
end
